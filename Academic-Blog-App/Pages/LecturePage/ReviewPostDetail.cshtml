@page
@model Academic_Blog_App.Pages.LecturePage.ReviewPostDetailModel
@{
}
<form method="post">
    <div class="body_bg layout_padding" style="padding: 40px;">
        <section class="service_section">
            <div class="container">
                <div class="row" style="margin: 40px 0;">
                    <input type="hidden" asp-for="Blog.Id" />
                    <div class="col-md-2">
                        <img class="rounded-circle shadow" src="@Model.Blog.Author.Avatar" alt="" style="width: 150px; height: 150px " />
                    </div>
                    <div class="col-md-10" style="display: block; margin: auto 0; padding-right: 20px;">
                        <h5 style="margin: 0; font-weight: 700; font-size: 24px; ">
                            @Model.Blog.Author.Name
                        </h5>
                    </div>
                </div>
                <div class="box" style="width: 100% !important">
                    <h2 style="margin: 20px 0; font-size: 38px; font-weight: bold;">@Model.Blog.Title</h2>
                    <span style="color: red;">Created: @Model.Blog.CreatedTime</span>
                    <p style="margin: 12px 0; font-size: 20px; padding: 10px 0;">
                        @Model.Blog.Description
                    </p>
                    <div class="w-100 border border-primary">
                        <div class="form-group p-2">
                            <label for="lectureComment" class="form-label font-weight-bold">Lecture comment</label>
                            <input type="text" class="form-control" asp-for="Blog.ReviewFromReviewer" required pattern=".*[^ ].*" />
                        </div>
                        <div class="form-group p-2 d-flex">
                            <input asp-page-handler="Approve" type="submit" class="btn btn-outline-success flex-fill mx-2" name="accept" value="Approve" />
                            <input asp-page-handler="Reject" type="submit" class="btn btn-outline-danger flex-fill mx-2" name="reject" value="Decline" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</form>